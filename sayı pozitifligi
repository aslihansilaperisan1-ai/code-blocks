#include <stdio.h>
#include <stdlib.h>
int x = 0;
int main()
{
    printf("isaretini ogrenmek istediginiz sayiyi giriniz:\n");
    scanf("%int", &x);

    if(x>0)
    {
        printf("Girilen sayinin degeri pozitiftir.");
    }

    else if(x<0)
    {
        printf("Girilen sayinin degeri negatiftir.");
    }

    else
        printf("Girilen sayinin degeri 0'dir.");
    return 0;
}